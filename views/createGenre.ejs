<%- include ("layout/_head.ejs",{ title:title }) %>
    <h1>
        <%= title %>
    </h1>

        <% if (errors.length) { %>
         <ul>
            <% errors.forEach(error => { %>
                <% console.log(errors) %>
                <li> <%= `${error.msg} at ${error.path? error.path : ""}` %> </li>
            <% }) %>
         </ul>
        <% } %>
        <div class="form-wrapper">
            <form action="" method="post">
                <div class="field-group">
                    <label for="genreName" id="genreNameLabel">Name:</label>
                    <input type="text" name="genreName" id="genreName" required placeholder="genre name...">
                </div>
                <div class="field-group">
                    <label for="genreDescription" id="genreDescriptionLabel">Description:</label>
                    <textarea name="genreDescription" id="genreDescription" rows="5" cols="33" placeholder="Genre Description..." required></textarea>
                </div>
                <button type="submit">Add Genre</button>
            </form>
        </div>
   
    






